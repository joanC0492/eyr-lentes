<div class="grid--no-gutters image-bar image-bar--{{ section.settings.section_height }}">
      {% case section.blocks.size %}
        {% when 1 %}
          {%- assign column_size = '' -%}
          {%- assign image_width = '2000' -%}
        {% when 2 %}
          {%- assign column_size = 'col-xs-12 col-md-6 col-sm-6 no-padding' -%}
          {%- assign image_width = '900' -%}
        {% when 3 %}
          {%- assign column_size = 'col-xs-12 col-md-4 col-sm-4 no-padding' -%}
          {%- assign image_width = '640' -%}
        {% else %}
          {%- assign column_size = 'col-xs-12 col-md-3 col-sm-3 no-padding' -%}
          {%- assign image_width = '400' -%}
      {% endcase %}
      {% case section.settings.section_height %}
        {% when 'x-small' %}
          {%- assign image_height = '125' -%}
        {% when 'small' %}
          {%- assign image_height = '300' -%}
        {% when 'medium' %}
          {%- assign image_height = '475' -%}
        {% when 'large' %}
          {%- assign image_height = '650' -%}
        {% when 'x-large' %}
          {%- assign image_height = '775' -%}
      {% endcase %}
      {% capture image_size %}{{ image_width }}x{{ image_height }}{% endcapture %}

      {% for block in section.blocks %}
        {%- assign img_url = '' -%}
      	{%- assign column_size = block.settings.class -%}
        <div class="{{ column_size }}" {{ block.shopify_attributes }}>
          {% comment %}
          <style>
            .image-bar__item--{{ block.id }} {
              background-position: {{ block.settings.alignment }};
            }
          </style>
            {% endcomment %}
          {% assign css =  '.image-bar__item--' | append:  block.id  %}
          {% assign css =  css | append:  '{ background-position:'| append: block.settings.alignment %}
          {% assign css =  css | append: '}' %}
          <script type="text/javascript">
            var css = "{{ css }}",
            head = document.head || document.getElementsByTagName('head')[0],
              style = document.createElement('style');

            style.type = 'text/css';
            if (style.styleSheet){
              style.styleSheet.cssText = css;
            } else {
              style.appendChild(document.createTextNode(css));
            }

            head.appendChild(style);
          </script>
          {% if block.settings.image_banner_image != blank %}
            {%- assign img_url = block.settings.image_banner_image | img_url: image_size, crop: 'center' -%}
          {% else %}
            {%- assign img_url = '' -%}
          {% endif %}
          {% if block.settings.link_banner_image != blank %}
            <a href="{{ block.settings.link_banner_image }}" class="image-bar__item image-bar__link">
          {% elsif img_url != blank %}
            <div class="image-bar__item image-bar__item--{{ block.id }}">
          {% else %}
            <div class="image-bar__item">
          {% endif %}
          <div class="image-bar__content{% if block.settings.cta_label != blank %} image-bar__overlay{% endif %}">
            <img class="img-responsive" alt="{{ shop.name }}" src="{{ img_url }}" />
            {% if img_url == blank %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
			
            {% if block.settings.cta_label != blank %}
              <div class="image-bar__text">
                <h3 class="image-bar__caption" style="color: {{ block.settings.color }}">{{ block.settings.cta_label | escape }}</h3>
                <p class="image-bar__description" style="color: {{ block.settings.color }}">{{ block.settings.imgdescription | escape }}</p>
                <a href="{{ block.settings.link }}" class="btn btn-links">{{ block.settings.titlelink }}</a>
              </div>
            {% endif %}
          </div>
          {% if block.settings.link != blank %}
            </a>
          {% else %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
  </div>