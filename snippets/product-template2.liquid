<div class="product-template__container container" itemscope itemtype="http://schema.org/Product" id="ProductSection-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="product" data-enable-history-state="true">
  <meta itemprop="name" content="{{ product.title }}">
  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
  <meta itemprop="image" content="{{ product.featured_image.src | img_url: '800x' }}">

  {% comment %}
    Get first variant, or deep linked one
  {% endcomment %}
  {%- assign current_variant = product.selected_or_first_available_variant -%}
  {%- assign product_thumb_size = '460x460' -%}
  {%- assign product_image_zoom_size = '1024x1024' -%}
  {%- assign enable_zoom = section.settings.enable_zoom -%}

  {%- assign column_center = 'col-xs-12 col-sm-8 col-md-9' -%}
  {%- assign column_left_product = 'col-xs-12 col-sm-12 col-md-5' -%}
  {%- assign column_center_product = 'col-xs-12 col-sm-12 col-md-7' -%}
  {%- assign column_right_product = 'col-xs-12 col-sm-12 col-md-7' -%}
  
  {% case section.settings.image_size %}
    {% when 'small' %}
      {%- assign product_image_width = 'col-xs-12 col-md-4' -%}
      {%- assign product_description_width = 'col-xs-12 col-md-8' -%}    
      {%- assign product_image_size = '400x' -%}
    {% when 'medium' %}
      {%- assign product_image_width = 'col-xs-12 col-md-6' -%}
      {%- assign product_description_width = 'col-xs-12 col-md-6' -%}
      {%- assign product_image_size = '600x' -%}
    {% when 'large' %}
      {%- assign product_image_width = 'col-xs-12 col-md-8' -%}
      {%- assign product_description_width = 'col-xs-12 col-md-4' -%}
      {%- assign product_image_size = '720x' -%}
    {% when 'full' %}
      {%- assign product_image_width = 'col-xs-12 col-md-12' -%}
      {%- assign product_description_width = 'col-xs-12 col-md-12' -%}
      {%- assign product_image_size = '1090x' -%}
      {%- assign enable_zoom = false -%}
  {% endcase %}
  {% if section.settings.sidebar_detail_enable %}
  <aside>
    <div {% if section.settings.position_sidebar == "left" %} id="left_column" {% else %} id="right_column" {% endif %} class="{% if section.settings.position_sidebar == "left" %}left_column pull-left {% else %}right_column pull-right {% endif %}sidebar col-sm-4 col-md-3 col-xs-12">
      {% include 'sidebar' %}
    </div>
  </aside>
  {% endif %}
  <div id="center_column" class="center_column {% if settings.sidebar_detail_enable %}{{ column_center }}{% endif %}">
    <div class="row product-single">
      <div class="product-single__photos {{ product_image_width }}{% if section.settings.image_size == 'full' %} product-single__photos--full{% endif %}">
        {%- assign featured_img_src = current_variant.featured_image.src | default: product.featured_image.src -%}
        {%- assign featured_img_alt = current_variant.featured_image.alt | default: product.featured_image.alt -%}
        {% if section.settings.zoom_detail_image == "Nome" %}
        <div id="FeaturedImageZoom-{{ section.id }}" class="product-single__photo{% if product.images.size > 1 %} product-single__photo--has-thumbnails{% endif %}" {% if enable_zoom %}data-zoom="{{ featured_img_src | img_url: product_image_zoom_size }}"{% endif %}>
          <span id="view_full_size">
          	<img src="{{ featured_img_src | img_url: product_image_size }}" alt="{{ featured_img_alt }}" id="FeaturedImage-{{ section.id }}" itemprop="image" class="product-featured-img{% if enable_zoom %} js-zoom-enabled{% endif %}">
          </span>
        </div>

          {% if product.images.size > 1 %}
              {% if product.images.size > 3 %}
                  {%- assign enable_thumbnail_slides = true -%}
              {% endif %}

              <div class="thumbnails-wrapper{% if enable_thumbnail_slides == true %} active-thumb thumbnails-slider--active{% endif %}">
                {% if enable_thumbnail_slides == true %}
                  <button type="button" class="btn btn--link medium-up--hide thumbnails-slider__btn thumbnails-slider__prev thumbnails-slider__prev--{{ section.id }}">
                    {% include 'icon-chevron-left' %}
                    <span class="icon__fallback-text">{{ 'sections.slideshow.previous_slide' | t }}</span>
                  </button>
                {% endif %}
                <ul class="product-single__thumbnails  product-single__thumbnails-{{ section.id }}">
                  {% for image in product.images %}
                    <li class="{{ product_thumbnail_width }} product-single__thumbnails-item">
                      <a
                        href="{{ image.src | img_url: product_image_size }}" data-imageid="{{ image.id }}" 
                          class="text-link product-single__thumbnail product-single__thumbnail--{{ section.id }}"
                          {% if enable_zoom %}data-zoom="{{ image.src | img_url: product_image_zoom_size }}"{% endif %}>
                          <img class="product-single__thumbnail-image" src="{{ image.src | img_url: product_thumb_size }}" alt="{{ image.alt | escape }}">
                      </a>
                    </li>
                  {% endfor %}
                </ul>
                {% if enable_thumbnail_slides == true %}
                  <button type="button" class="btn btn--link medium-up--hide thumbnails-slider__btn thumbnails-slider__next thumbnails-slider__next--{{ section.id }}">
                    {% include 'icon-chevron-right' %}
                    <span class="icon__fallback-text">{{ 'sections.slideshow.next_slide' | t }}</span>
                  </button>
                {% endif %}
              </div>
          {% endif %}

        {% else %}
        <div class="big-image">
          <img id="zoom_03" alt="{{ featured_img_alt }}" src="{{ featured_img_src | img_url: product_image_size }}" data-zoom-image="{{ featured_img_src | img_url: product_image_size }}"/>
        </div>
        <div id="gallery_01" class="thumb-list-position thumb-list-position-{{ section.settings.thumb_detail_position}}">
          {% if product.images.size > 1 %}
          {% if product.images.size > 3 %}
          {%- assign enable_thumbnail_slides = true -%}
          {% endif %}

          <div class="thumbnails-wrapper{% if enable_thumbnail_slides == true %} thumbnails-slider--active{% endif %}">
            {% if enable_thumbnail_slides == true %}
            <button type="button" class="btn btn--link medium-up--hide thumbnails-slider__btn thumbnails-slider__prev thumbnails-slider__prev--{{ section.id }}">
              {% include 'icon-chevron-left' %}
              <span class="icon__fallback-text">{{ 'sections.slideshow.previous_slide' | t }}</span>
            </button>
            {% endif %}
            <ul class="product-single__thumbnails product-single__thumbnails-{{ section.id }}">
              {% for image in product.images %}
              <li class="{{ product_thumbnail_width }} product-single__thumbnails-item">
                <a href="#" class="product-single__thumbnail product-single__thumbnail--{{ section.id }}" data-image="{{ image.src | img_url: product_image_size }}" data-zoom-image="{{ image.src | img_url: product_image_size }}">
                  <img class="product-single__thumbnail-image" src="{{ image.src | img_url: product_thumb_size }}" alt="{{ image.alt | escape }}">
                </a>
              </li>
              {% endfor %}
            </ul>
            {% if enable_thumbnail_slides == true %}
            <button type="button" class="btn btn--link medium-up--hide thumbnails-slider__btn thumbnails-slider__next thumbnails-slider__next--{{ section.id }}">
              {% include 'icon-chevron-right' %}
              <span class="icon__fallback-text">{{ 'sections.slideshow.next_slide' | t }}</span>
            </button>
            {% endif %}
          </div>
          {% endif %}
        </div>
        {% if section.settings.zoom_detail_image == "Tints" %}
        <script>
          $("#zoom_03").elevateZoom({
            tint:true, 
            tintColour:'#F90',
            scrollZoom : true,
            tintOpacity:0.5,
            gallery:'gallery_01'
          }); 
        </script>
        {% endif %}      
        {% if section.settings.zoom_detail_image == "Lightbox" %}
        <script> 
          $("#zoom_03").elevateZoom({
            gallery:'gallery_01', 
            cursor: 'pointer', 
            galleryActiveClass: 'active', 
            imageCrossfade: true, 
            scrollZoom : true,
            zoomWindowHeight : 400,
            zoomWindowWidth :400
          }); 
        </script>  
        {% endif %} 
        {% if section.settings.zoom_detail_image == "Inner_Zoom" %}
        <script>      
          $("#zoom_03").elevateZoom({
            zoomType: "inner",
            cursor: "crosshair",
            scrollZoom : true,
            scrollZoom : true,
            gallery:'gallery_01'
          });
        </script> 
        {% endif %}    
        {% if section.settings.zoom_detail_image == "Lens_Zoom" %}
        <script>      
          $("#zoom_03").elevateZoom({
            zoomType: "lens",
            lensShape : "round",
            lensSize    : 200,
            scrollZoom : true,
            gallery:'gallery_01'
          });
        </script> 
        {% endif %}        


        <script>
          $("#zoom_03").bind("click", function(e) {  
            var ez =   $('#zoom_03').data('elevateZoom');	
            $.fancybox(ez.getGalleryList());
            return false;
          });
        </script>  

        {% endif %}

