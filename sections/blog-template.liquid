        "id": "blogsidebar_html_title",
        "label": "Block Html Title"
      },
      {
        "type": "textarea",
        "id": "blogsidebar_html_des",
        "label": "Block Html Description"
      },
      {
        "type": "image_picker",
        "id": "blogsidebar_html",
        "label": "Block Html Image"
      },
      {
        "type": "text",
        "id": "blogsidebar_html_link",
        "label": "Block Html Link"
      }
  ]
