{% if section.settings.homepage_newsletter_enable %}
<div class="newletter_block border_right">
  <div class="box-footer text-center">
    {% if section.settings.newsletter_form_action != blank %}
    {% assign form_action = section.settings.newsletter_form_action %}
    {% else %}
    {% assign form_action = '#' %}
    {% endif %}
    <div id="newsletter_block" class="block inline">
      <div class="container">
        <div class="col-lg-4 col-md-4 col-sm-5 col-xs-12">
          {% if section.settings.homepage_newsletter_title != blank %}
          <h2 class="page-subheading">
            {{ section.settings.homepage_newsletter_title }}
          </h2>
          {% if section.settings.homepage_newsletter_des != blank %}
          <div class="des_newsletter">
            {{ section.settings.homepage_newsletter_des }}
          </div>
          {% endif %}
          {% endif %}
        </div>
        <div class="block_content col-lg-8 col-md-8 col-sm-7 col-xs-12">        
          <form class="form_newsletter" action="{{ form_action }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank">
            <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="EMAIL" id="mail" class="newsletter-input form-control" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}" >
            <button id="subscribe" class="button_mini btn" type="submit">
              <span>{{ 'general.newsletter_form.submit' | t }}</span>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}