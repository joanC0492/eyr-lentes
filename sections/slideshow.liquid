      "options": [
        {
          "label": "Small",
          "value": "small"
        },
        {
          "label": "Medium",
          "value": "medium"
        },
        {
          "label": "Large",
          "value": "large"
        }
      ]
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Text size",
      "default": "medium",
      "options": [
        {
          "label": "Medium",
          "value": "medium"
        },
        {
          "label": "Large",
          "value": "large"
        }
      ]
    },	
	{
        "type": "header",
        "content": "Navigator"
    },
	{
      "type": "select",
      "id": "slideshow_type_Nav",
      "label": "Navigator Type",
      "default": "true",	
      "options": [
        {
          "label": "None",
          "value": "false"
        },
        {
          "label": "Bullet",
          "value": "true"
