{% if section.settings.image != blank %}
  				{% assign css =".hero--" | append: section.id %}
              {% assign css = css | append: '{ background-position:' %}
              {% assign css = css | append: section.settings.alignment %}
              {% assign css = css | append: ';}' %}
                
              {% assign css = css | append: '@media screen and (max-width: 600px) { .hero--' %}
              {% assign css = css | append: section.id %}
              {% assign css = css | append: "{ background-image: url('" %}
              {% assign img1 = section.settings.image | img_url: '600x600' %}  
              {% assign css = css | append: img1 %}
              {% assign css = css | append: "');}}" %}
              
                
                
              {% assign css = css | append: '@media screen and (min-width: 601px) and (max-width: 1024px) { .hero--' %}
              {% assign css = css | append: section.id %}
              {% assign css = css | append: "{ background-image: url('" %}
              {% assign img1 = section.settings.image | img_url: '1024x1024' %}  
              {% assign css = css | append: img1 %}
              {% assign css = css | append: "');}}" %}

		      {% assign css = css | append: '@media screen and (min-width: 1025px) and (max-width: 1600px) { .hero--' %}
              {% assign css = css | append: section.id %}
              {% assign css = css | append: "{ background-image: url('" %}
              {% assign img1 = section.settings.image | img_url: '1600x1600' %}  
              {% assign css = css | append: img1 %}
              {% assign css = css | append: "');}}" %}

			  {% assign css = css | append: ' @media screen and (min-width: 1601px) { .hero--' %}
              {% assign css = css | append: section.id %}
              {% assign css = css | append: "{ background-image: url('" %}
              {% assign img1 = section.settings.image | img_url: '2048x2048' %}  
              {% assign css = css | append: img1 %}
              {% assign css = css | append: "');}}" %}
              
              <script type="text/javascript">
                var css = "{{ css }}",
                        head = document.head || document.getElementsByTagName('head')[0],
                        style = document.createElement('style');

                    style.type = 'text/css';
                    if (style.styleSheet){
                      style.styleSheet.cssText = css;
                    } else {
                      style.appendChild(document.createTextNode(css));
                    }

                    head.appendChild(style);
              </script>
{% endif %}
<div class="hero hero--{{ section.id }} hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %}">
  {% if section.settings.image == blank %}
    <div class="placeholder-background">
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  {% endif %}
    <div class="hero__inner">
      <div class="container text-center">
        <div class="inner_hero col-lg-7 col-md-7 col-sm-7 col-xs-9 col-sp-9">
        {% if section.settings.title != blank %}
          <h2 class="h1 mega-title{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}" style="color: {{ section.settings.color }}">{{ section.settings.title | escape }}</h2>
        {% endif %}
        {% if section.settings.text != blank %}
          <div class="rte-setting mega-subtitle{% if section.settings.text_size == 'large' %} mega-subtitle--large{% endif %}">{{ section.settings.text }}</div>
        {% endif %}
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="btn hero__btn">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
      </div>
    </div>
</div>

{% schema %}
{
  "name": "Image with text overlay",
  "class": "index-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Image alignment",
      "default": "center",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Middle"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ]
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Image with text overlay"
    },
	{
	  "type": "color",
      "id": "color",
      "label": "Heading color",
	  "default" : "#FFFFFF"
	},
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Use overlay text to give your customers insight into your brand. Select imagery and text that relates to your style and story.</p>"
    },
    {
      "type": "select",
      "id": "hero_size",
      "label": "Section height",
      "default": "medium",
      "options": [
        {
          "label": "Extra Small",
          "value": "x-small"
        },
        {
          "label": "Small",
          "value": "small"
        },
        {
          "label": "Medium",
          "value": "medium"
        },
        {
          "label": "Large",
          "value": "large"
        },
        {
          "label": "Extra Large",
          "value": "x-large"
        }
      ]
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Text size",
      "default": "medium",
      "options": [
        {
          "label": "Medium",
          "value": "medium"
        },
        {
          "label": "Large",
          "value": "large"
        }
      ]
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Image with text overlay",
      "category": "Image"
    }
  ]
}
{% endschema %}
